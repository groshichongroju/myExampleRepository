<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		     x:Class="XFPOC.loginPage">
	<ContentPage.Content>
		<ScrollView>

			<Frame Padding="10,50,10,40" BackgroundColor="Silver">
				<StackLayout HorizontalOptions="Fill" VerticalOptions="Fill">
				<StackLayout Padding="0,50,0,60" Orientation="Vertical" Spacing="1" BackgroundColor="Gray">
					
					<StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
						<Label Text="Username" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
						<Entry x:Name="username" Placeholder="username" BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
					</StackLayout>
					
					<StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
						<Label Text="Password" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
						<Entry x:Name="password" Placeholder="password" IsPassword="true"  BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
					</StackLayout>	
					
					<StackLayout Orientation="Horizontal" Padding="0,25,0,0">
						<Button Text="login" Clicked="loginclickButton" BackgroundColor="Blue" TextColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
						<Button Text="cancel" Clicked="cancelclickButton" BackgroundColor="Silver" TextColor="Blue" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
					</StackLayout>
				 </StackLayout>

				<!-- new stack layout -->
					<StackLayout Padding="0,50,0,60" Orientation="Vertical" Spacing="1" BackgroundColor="Gray">
					
					<StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
						<Label Text="XX" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
						<Entry x:Name="XX" Placeholder="XX" BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
					</StackLayout>
					
					<StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
						<Label Text="YY" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
						<Entry x:Name="YY" Placeholder="YY" IsPassword="true"  BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
					</StackLayout>	
					

				 </StackLayout>
				<!-- end of new stack layout -->
				</StackLayout>
			</Frame>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
